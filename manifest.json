{
	"$schema": "http://json.schemastore.org/chrome-manifest",
	"manifest_version": 3,
	"name": "Lobster Protect - Site blocker",
	"short_name": "LProtect",
	"description": "A free and Open-Source site blocker.",
	"version": "1.0",
	"permissions": [
		"storage",
		"unlimitedStorage",
		"tabs",
		"search"
	],
	"icons": {
		"16": "src/resources/img/logo64.png",
		"48": "src/resources/img/logo128.png",
		"128": "src/resources/img/logo512.png"
	},
	"background": {
		"service_worker": "src/service/service-worker.js",
		"type": "module"
	},
	"content_scripts": [
		{
			"matches": [
				"<all_urls>"
			],
			"js": [
				"src/utils/classes.js",
				"src/utils/enums.js",
				"src/content/content.js"
			],
			"run_at": "document_start"
		}
	],
	"options_page": "src/options_page/redirect.html"
}
