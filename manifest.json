{
	"manifest_version": 3,
	"name": "Lobster Protect - Site blocker",
	"short_name": "LobsterProtect",
	"description": "A free and Open-Source site blocker.",
	"version": "1.0",
	"permissions": [
		"storage",
		"unlimitedStorage",
		"tabs",
		"search"
	],
	"icons": {
		"16": "ui/img/logo64.png",
		"48": "ui/img/logo128.png",
		"128": "ui/img/logo512.png"
	},
	"background": {
		"service_worker": "src/service/service-worker.js",
		"type": "module"
	},
	"content_scripts": [
		{
			"matches": [
				"<all_urls>"
			],
			"js": [
				"src/content/content.js"
			],
			"run_at": "document_start"
		}
	],
	"options_page": "ui/settings.html"
}